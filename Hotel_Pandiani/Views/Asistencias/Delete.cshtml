@model Hotel_Pandiani.Models.Asistencia

@{
    ViewData["Title"] = "Delete";
}


<h3>¿Realmente deseas borrar la asistencia?</h3>

<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AsistenciaId" />
        <input type="submit" value="Borrar" class="btn btn-danger" id="rojo" /> 
        <a id="bw"  class="btn btn-primary" asp-action="Index">Volver a la lista</a>
    </form>
</div>
