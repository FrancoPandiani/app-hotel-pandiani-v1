@model Hotel_Pandiani.Models.Empleado
@{
    ViewData["Title"] = "Editar";
}
@{ List<TurnoEnum> listaTurnos = (List<TurnoEnum>)ViewData["tr"]; }
@{ List<CargoEnum> listaCargos = (List<CargoEnum>)ViewData["car"]; }

<h1>Editar Empleado</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control"  />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sueldo" class="control-label"></label>
                <input asp-for="Sueldo" class="form-control" />
                <span asp-validation-for="Sueldo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaIngreso" class="control-label"></label>
                <input asp-for="FechaIngreso" class="form-control" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TurnoEnum" class="control-label"></label>
                <select asp-for="TurnoEnum" class="form-control">

                    @foreach (TurnoEnum turno in listaTurnos)
                    {
                        <option>@turno.ToString()</option>
                    }

                </select>
                <span asp-validation-for="TurnoEnum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cargo" class="control-label"></label>
                <select asp-for="Cargo" class="form-control">

                    @foreach (CargoEnum car in listaCargos)
                    {
                        <option>@car.ToString()</option>
                    }

                </select>
                <span asp-validation-for="Cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="boton-verde-big" class="btn btn-primary" type="submit" value="Guardar"  />
            </div>
        </form>
    </div>
</div>

<div>
    <a id="bw-chico" class="btn btn-primary" asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
